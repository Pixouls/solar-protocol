#!/bin/bash
set -e

echo starting solar-protocol

podman run \
  --tty \
  --detach \
  --replace \
  --name solar-protocol-dev \
  --mount type=bind,src="$(pwd)",target=/solar-protocol \
  --publish 80 \
  localhost/solar-protocol

port=$(podman port solar-protocol-dev 80)
echo open http://${server/0.0.0.0//}
