FROM docker.io/library/python:3.10-slim

RUN apt-get --quiet update && apt-get --quiet upgrade --yes
ENV TERM=screen-256color

WORKDIR /api
RUN python -m venv /datalogger/venv
ENV PATH="/datalogger/venv/bin:$PATH"
COPY requirements.txt .
RUN pip install --quiet --no-cache-dir --requirement requirements.txt

WORKDIR /local
COPY ../local/local.json .

WORKDIR /api/venv
COPY . .
CMD uvicorn api:app --proxy-headers --host 0.0.0.0 --port 80
